<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IsPackable>false</IsPackable>
		<IsTestProject>true</IsTestProject>
	</PropertyGroup>

	<!-- ASP.NET Core MVC sonuç tipleri (OkObjectResult, NotFoundResult, CreatedAtActionResult, ...) için -->
	<ItemGroup>
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
		<PackageReference Include="xunit" Version="2.5.3" />
		<PackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />
		<PackageReference Include="coverlet.collector" Version="6.0.0" />
		<PackageReference Include="FluentAssertions" Version="8.5.0" />

		<!-- Repo mock’larında async LINQ için -->
		<PackageReference Include="MockQueryable.Moq" Version="8.0.0" />
		<!-- ReturnsDbSet() kullanıyorsan gerekli -->
		<PackageReference Include="Moq.EntityFrameworkCore" Version="7.0.0.5" />
		<PackageReference Include="Moq" Version="4.20.72" />

		<!-- İstersen kalsın; InMemory context kullandığın testlerde işe yarar -->
		<PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" Version="9.0.8" />
	</ItemGroup>

	<ItemGroup>
		<!-- Controller sınıflarına erişmek için API projesini de ekle -->
		<ProjectReference Include="..\RealEstateApp.API\RealEstateApp.API.csproj" />
		<ProjectReference Include="..\RealEstateApp.Business\RealEstateApp.Business.csproj" />
		<ProjectReference Include="..\RealEstateApp.Core\RealEstateApp.Core.csproj" />
		<ProjectReference Include="..\RealEstateApp.DataAccess\RealEstateApp.DataAccess.csproj" />
	</ItemGroup>

	<!-- Opsiyonel klasör tanımları -->
	<ItemGroup>
		<Folder Include="Controllers\" />
		<Folder Include="Helpers\" />
	</ItemGroup>

</Project>
